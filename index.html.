  <!-- Biblioteca para QR Code -->
  <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>

  <script>
    function calcularTotal() {
      let total = 0;
      document.querySelectorAll("table tr").forEach((linha, index) => {
        if(index === 0) return;
        let preco = parseFloat(linha.cells[1].innerText);
        let qtd = linha.cells[2].querySelector("input").value;
        total += preco * qtd;
      });
      document.getElementById("total").innerText = total.toFixed(2);
    }

    function gerarPix() {
      let total = document.getElementById("total").innerText;
      if(total <= 0) {
        alert("Adicione algum item ao pedido!");
        return;
      }

      let chave = "03980793664";
      let nome = "√Åvilo Fonseca";
      let cidade = "Montes Claros";
      let valor = total;
      
      // PIX copia e cola simples
      let pixCode = `Chave PIX: ${chave}\nNome: ${nome}\nCidade: ${cidade}\nValor: R$ ${valor}`;
      document.getElementById("pix-code").innerText = pixCode;

      // Gerar QR Code
      document.getElementById("qrcode").innerHTML = "";
      QRCode.toCanvas(document.createElement('canvas'), pixCode, function (err, canvas) {
        if (!err) document.getElementById("qrcode").appendChild(canvas);
      });
    }
  </script>

